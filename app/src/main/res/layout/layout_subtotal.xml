<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewExtra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Producto:"
            android:id="@+id/ProductoLblExtra"
            android:layout_marginTop="84dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/productoTxt" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productoTxt"
            android:layout_alignBottom="@+id/ProductoLblExtra"
            android:layout_toEndOf="@+id/CantidadLblExtra" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cantidad:"
            android:id="@+id/CantidadLblExtra"
            android:layout_marginRight="55dp"
            android:layout_above="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="49dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:id="@+id/CantidadExtraTxt"
            android:layout_below="@+id/ProductoLblExtra"
            android:layout_alignStart="@+id/productoTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:id="@+id/textView"
            android:layout_below="@+id/CantidadExtraTxt"
            android:layout_alignEnd="@+id/CantidadLblExtra"
            android:layout_marginTop="29dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SubtotalExtraTxt"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_alignEnd="@+id/CantidadExtraTxt" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitado"
        android:id="@+id/solicitadoSwitch"
        android:checked="false"
        android:layout_above="@+id/productoTxt"
        android:layout_alignEnd="@+id/productoTxt" />


</RelativeLayout>
</ScrollView>
