<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Producto:"
            android:id="@+id/ProductoLblExtra"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="79dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cantidad:"
            android:id="@+id/CantidadLblExtra"
            android:layout_marginRight="55dp"
        android:layout_alignBaseline="@+id/CantidadExtraTxt"
        android:layout_alignBottom="@+id/CantidadExtraTxt" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="5"
            android:id="@+id/CantidadExtraTxt"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/ProductoLblExtra"
            android:layout_alignStart="@+id/productoTxt" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productoTxt"
        android:layout_above="@+id/CantidadExtraTxt"
        android:layout_toEndOf="@+id/ProductoLblExtra" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SubtotalExtraTxt"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal:"
        android:id="@+id/textView"
        android:layout_below="@+id/CantidadExtraTxt"
        android:layout_alignEnd="@+id/CantidadLblExtra"
        android:layout_marginTop="29dp" />
</RelativeLayout>
</ScrollView>
